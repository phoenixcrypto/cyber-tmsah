# Strapi CMS Configuration (REQUIRED)
# The system ONLY uses Strapi - no local fallback
# You MUST configure these variables for the system to work
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# REQUIRED: API token for authenticated requests
# Generate in Strapi: Settings → API Tokens → Create new API Token
STRAPI_API_TOKEN=your_strapi_api_token_here

# Admin Panel Password (REQUIRED)
# This password is used to access the admin panel at /admin/content
# IMPORTANT: Use a strong password! Never commit this to git.
ADMIN_PASSWORD=your_strong_password_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Database (if using external DB instead of in-memory)
# DATABASE_URL=

